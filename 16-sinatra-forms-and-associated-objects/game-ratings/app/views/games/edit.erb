<h1>Edit game</h1>

<form action="/games/<%= @game.id %>" method="post">
	<input type="hidden" name="_method" value="patch">

	<div>
		<label for="title">Title:</label>
		<input type="text" name="game[title]" id="title" value="<%= @game.title %>">
	</div>

	<div>
		<label for="description">Description:</label>
		<textarea rows="4" cols="50" name="game[description]" id="description"><%= @game.description %></textarea>
	</div>

	<div>
		<label for="image_url">Image URL:</label>
		<input type="text" name="game[image_url]" id="image_url" value="<%= @game.image_url %>">
	</div>

	<div>
		<label for="rating">Rating:</label>
		<input type="number" name="game[rating]" id="rating" min="1" max="5" value="<%= @game.rating %>">
	</div>

	<input type="submit" class="button">
</form>
