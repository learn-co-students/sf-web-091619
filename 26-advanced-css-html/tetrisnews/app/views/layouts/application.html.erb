<!DOCTYPE html>
<html>
  <head>
    <title>Tetrisnews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <img src="https://www.txlotteryluckzone.com/-res/tetris2015/img/logo-game.png" width="30" height="30" class="d-inline-block align-top" alt="">
        Tetris News
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/players/new">New Player</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/players">All Players</a>
          </li>
        </ul>
      </div>
    </nav>

    <div id="wrapper">
      <%= yield %>
    </div>
  </body>
</html>
