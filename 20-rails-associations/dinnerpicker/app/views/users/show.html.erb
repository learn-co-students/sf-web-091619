<h1><%= @user.name %>'s Dinners:</h1>

<ul>
	<% @user.dinners.each do |dinner| %>
		<li><%= link_to dinner.name, dinner %></li>
	<% end %>
</ul>

<%= link_to "Add New Dinner", "/dinners/new" %><br>
<%= link_to "Edit User", "/users/#{@user.id}/edit" %>
<%= button_to "Delete User", @user, method: :delete %>
